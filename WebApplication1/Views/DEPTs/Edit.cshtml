@model WebApplication1.Models.DEPT

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="loader" class="loader"></div>

    <div class="form-horizontal d-flex p-4">
        <div class="col-7 d-none d-xl-none d-lg-block p-4">
            <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3 h-100 ">
        </div>
        <div class="col-7 d-none d-xl-block p-4">
            <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3">
        </div>

        <div class="m-auto">
            <h2 class="text-center">Edit Department</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.DEPT_ID)

            <div class="form-group">
                @Html.LabelFor(model => model.DEPT1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12 mb-2">
                    @Html.EditorFor(model => model.DEPT1, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DEPT1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="DEPT_DESC">Department Description</label>
                <div class="col-md-12 mb-2">
                    @Html.EditorFor(model => model.DEPT_DESC, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DEPT_DESC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="DEPT_BLDG">Department Building</label>
                <div class="col-md-12 mb-2">
                    @Html.EditorFor(model => model.DEPT_BLDG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DEPT_BLDG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="DEPT_FLOOR">Department Floor</label>
                <div class="col-md-12 mb-2">
                    @Html.EditorFor(model => model.DEPT_FLOOR, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DEPT_FLOOR, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group d-flex flex-column text-center">
                <div class="col-md-12 justify-content-center">
                    <input type="submit" value="Save Changes" class="btn btn-success my-2" />
                </div>
                <div class="col-md-12 justify-content-center">
                    @Html.ActionLink("Back to List", "Index", "DEPTs", new { area = "" }, new { @class = "btn btn-outline-primary" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    const loader = document.getElementById('loader');

    document.addEventListener("DOMContentLoaded", function () {
        loader.style.display = "none";
    });
</script>