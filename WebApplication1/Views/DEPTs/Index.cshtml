<script nonce="myScript">

    let tbDept = document.getElementById('tbDept');
    let tbDesc = document.getElementById('tbDesc');
    let tbBldg = document.getElementById('tbBldg');
    let tbFlr = document.getElementById('tbFlr');

    $(document).ready(function () {
        var table = new DataTable('#tblDepts', {
            layout: {
                top: 'pageLength',
                topStart: {
                    buttons: [

                        { extend: 'excel', className: 'btn btn-outline-success btn-sm px-3 py-2' },
                        { extend: 'pdf', orientation: 'landscape', className: 'btn btn-outline-danger btn-sm px-3 py-2 mx-1' }

                    ],
                },
            },

            initComplete: function () {
                //Department Name Input Filter
                this.api()
                    .columns([1])
                    .every(function () {
                        var column = this;

                        // Create input element
                        var input = document.createElement('input');
                        input.placeholder = "SEARCH BY NAME";
                        input.setAttribute("class", "form-control form-control-sm h-25");
                        tbDept.replaceWith(input);

                        // Event listener for user input
                        input.addEventListener('keyup', () => {
                            if (column.search() !== this.value) {
                                column.search(input.value).draw();
                            }
                        });
                    });

                //Department Description Input Filter
                this.api()
                    .columns([2])
                    .every(function () {
                        var column = this;

                        // Create input element
                        var input = document.createElement('input');
                        input.placeholder = "SEARCH BY DESCRIPTION";
                        input.setAttribute("class", "form-control form-control-sm h-25");
                        tbDesc.replaceWith(input);

                        // Event listener for user input
                        input.addEventListener('keyup', () => {
                            if (column.search() !== this.value) {
                                column.search(input.value).draw();
                            }
                        });
                    });

                //Department Building Dropdown Filter
                this.api()
                    .columns([3])
                    .every(function () {
                        var column = this;

                        var select = $('<select class="form-control form-control-sm"><option value="">--SELECT BUILDING--</option></select>')
                            .appendTo($('#tbBldg').empty())
                            .on('change', function () {
                                if (column.search() !== this.value) {
                                    column.search(this.value).draw();
                                }

