                            select.append('<option value="' + val + '">' + val + '</option>');
                        });
                    });

                //Department Floor Dropdown Filter
                this.api()
                    .columns([4])
                    .every(function () {
                        var column = this;

                        var select = $('<select class="form-control form-control-sm"><option value="">--SELECT FLOOR--</option></select>')
                            .appendTo($('#tbFlr').empty())
                            .on('change', function () {
                                if (column.search() !== this.value) {
