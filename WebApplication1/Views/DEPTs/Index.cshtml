@model IEnumerable<WebApplication1.Models.DEPT>

@{
    ViewBag.Title = "Departments List";
}

<div id="loader" class="loader"></div>

<div class="form-horizontal d-flex flex-column p-5">
    <h2 class="text-center">Department List</h2>

    <table table id="tblDepts" class="table table-bordered table-striped table-light small">
        <thead>
            <tr>
                <th>@Html.DisplayName("DEPARTMENT")</th>
                <th>@Html.DisplayName("DEPARTMENT DESCRIPTION")</th>
                <th>@Html.DisplayName("DEPARTMENT BUILDING")</th>
                <th>@Html.DisplayName("DEPARTMENT FLOOR")</th>
                <th>@Html.DisplayName("ACTIONS")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEPT1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEPT_DESC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEPT_BLDG)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DEPT_FLOOR)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.DEPT_ID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.DEPT_ID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.DEPT_ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
        @*<tfoot>
                <tr>
                    <th>@Html.DisplayName("DEPARTMENT")</th>
                    <th>@Html.DisplayName("DEPARTMENT DESCRIPTION")</th>
                    <th>@Html.DisplayName("DEPARTMENT BUILDING")</th>
                    <th>@Html.DisplayName("DEPARTMENT FLOOR")</th>
                    <th>@Html.DisplayName("ACTIONS")</th>
                </tr>
            </tfoot>*@


    </table>

    <p class="mx-auto">
        @Html.ActionLink("Back to Userlist", "Index", "Users", new { area = "" }, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Create Department", "Create", "DEPTs", new { area = "" }, new { @class = "btn btn-outline-danger" })
    </p>
</div>


@*Table Design and Features Imports*@

<link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>

@*Excel Export*@

<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>

@*PDF Export*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>

@*Export Button Features*@

<script src="https://cdn.datatables.net/buttons/3.2.0/js/dataTables.buttons.js"></script>
<script src="https://cdn.datatables.net/buttons/3.2.0/js/buttons.html5.min.js"></script>

@*Alerts*@
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script nonce="myScript">


    $(document).ready(function () {
        new DataTable('#tblDepts', {
            layout: {
                top: 'pageLength',
                topStart: {
                    buttons: [

                        { extend: 'excel', className: 'btn btn-outline-success btn-sm px-3 py-2' },
                        { extend: 'pdf', orientation: 'landscape', className: 'btn btn-outline-danger btn-sm px-3 py-2 mx-1' }

                    ],
                },
            }
        });

    });

</script>

<script type="text/javascript">
    const loader = document.getElementById('loader');

    document.addEventListener("DOMContentLoaded", function () {
        loader.style.display = "none";
    });
</script>