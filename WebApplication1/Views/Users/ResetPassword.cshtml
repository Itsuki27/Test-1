@model WebApplication1.Models.ResetPassword

@{
    Layout = "~/Views/Shared/_LayoutNoSession.cshtml";
    ViewBag.Title = "Reset Password";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal d-flex p-4">
        <div class="col-7 d-none d-xl-none d-lg-block p-4">
            <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3 h-100 ">
        </div>
        <div class="col-7 d-none d-xl-block p-4">
            <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3">
        </div>

        <div class="m-auto d-sm-block d-flex flex-column">
            <h2 class="text-center">Reset Password</h2>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.HiddenFor(a => a.ResetCode)
            </div>
            <div class="justify-content-center m-auto">
                <div class="form-group">
                    Password
                    <div class="col-md-11 mb-1">
                        @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger small" })
                    </div>
                </div>
                <div class="form-group">
                    Confirm Password
                    <div class="col-md-11 mb-1">
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger small" })
                    </div>
                </div>
            </div>


            <div class="form-group d-flex col-md-12 justify-content-center">
                <div class="m-auto">
                    <input type="submit" value="Submit" class="btn btn-success mt-4 px-4" />
                </div>
            </div>
        </div>
    </div>
}