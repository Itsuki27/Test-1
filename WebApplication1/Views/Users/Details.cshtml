@model WebApplication1.Models.User

@{
    ViewBag.Title = "Details";
}

<div class="form-horizontal d-flex p-4">
    <div class="col-6 d-none d-xl-none d-lg-block p-4">
        <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3 h-100 ">
    </div>
    <div class="col-6 d-none d-xl-block p-4">
        <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3">
    </div>
    <div class="m-auto">
        <h2>User Information</h2>
        <hr />

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Username)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Username)
            </dd>

            <dt>
                Password
                @*@Html.DisplayNameFor(model => model.PasswordHash)*@
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PasswordHash)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Date Created
                @*@Html.DisplayNameFor(model => model.CreatedDate)*@
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsActive)
            </dd>

        </dl>

        @Html.ActionLink("Edit", "Edit", new { id = Model.UserId }, new { @class = "btn btn-outline-success px-4" })
        @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-outline-primary" })
    </div>
</div>
