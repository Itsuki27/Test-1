@{
    Layout = "~/Views/Shared/_LayoutNoSession.cshtml";
    ViewBag.Title = "Forgot Password";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="loader hidden"></div>

    <div class="form-horizontal d-flex p-4">
        <div class="col-7 d-none d-xl-none d-lg-block p-4">
            <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3 h-100 ">
        </div>
        <div class="col-7 d-none d-xl-block p-4">
            <img src="~/Resources/imgHandshake.jpg" alt="Image" class="img-fluid rounded-3">
        </div>

        <div class="m-auto d-sm-block">
            <h2 class="text-center">Forgot Password</h2>
            <hr />

            <div class="small fst-italic mb-3 opacity-75">A password reset link will be sent to your registered email.</div>
            <div class="d-flex flex-row">
                <p class="m-auto"> Email: </p>
                @Html.TextBox("Email", "", new { @class = "form-control" })
            </div>
            <div class="form-group d-flex flex-column col-md-12 justify-content-center">
                <div class="m-auto">
                    <input type="submit" onclick="showLoading()" value="Submit" class="btn btn-success mt-2 mb-3 px-4" />
                </div>
                <div class="m-auto">
                </div>
            </div>
        </div>
    </div>

}

@section Scripts{

    @if (TempData["UserForgotErr"] != null)
    {
        @Html.Raw(TempData["UserForgotErr"])
    }

}

<script>
    let btSend = document.getElementById("btSend");

    function showLoading() {
        event.preventDefault();
        $(".loader").removeClass("hidden");
        setTimeout(function () {
            $("form").submit();
        }, 1);
        return true;
    }

</script>