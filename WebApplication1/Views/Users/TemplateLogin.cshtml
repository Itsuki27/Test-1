@model WebApplication1.Models.MyLogin

@{
    Layout = "~/Views/Shared/_LayoutNone.cshtml";
    ViewBag.Title = "Template Login";
}

<div class="d-flex flex-column loginContainer">
    
    <div class="loader hidden"></div>

    <div class="loginBox">
        <div class="p-5 d-flex justify-content-center m-auto">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div>
                    <img src="~/Resources/dvproLogo.png" alt="DVPRO Icon" />
                </div>

                <div class="col-md-12">

                    <h4 class="text-center mt-5">Log In</h4>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <label for="PasswordHash">Email</label>
                    <div class="col-md-12 mb-2">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-12 mb-2">
                        <label for="PasswordHash">Password</label>
                        @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12 mb-2">
                        <input type="submit" value="Log In" onclick="showLoading()" class="btn mt-4 px-4 col-md-12" id="btSubmit" />
                    </div>

                </div>

                <div class="d-flex col-md-12 mx-auto text-center flex-column mt-4">
                    @Html.ActionLink("Can't sign in?", "TemplateForgot", "Users", new { are = "" }, new { @class = "text-primary redirect" })
                </div>
            }
        </div>
    </div>

    <div class="mt-5 mx-auto">
        <p>© @DateTime.Now.Year - Powered by DVPRO Solutions, Inc.</p>
    </div>

</div>

@section Scripts{

    @if (TempData["TempForgot"] != null)
    {
        @Html.Raw(TempData["TempForgot"])
    }
    
    @if (TempData["TempReset"] != null)
    {
        @Html.Raw(TempData["TempReset"])
    }

}

<script>
    function showLoading() {
        event.preventDefault();
        $(".loader").removeClass("hidden");
        setTimeout(function () {
            $("form").submit();
        }, 1);
        return true;
    }
</script>